@model Lab13.Models.Persona
@{
    ViewBag.Title = "Busqueda";
}

<h2>Busqueda</h2>

@using (Html.BeginForm())
{
    <div class="mb-3">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Nombre, htmlAttributes: new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" value="Buscar">

}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.PersonaID)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.PersonaID)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Nombre)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Apellido)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Apellido)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.FechaNac)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.FechaNac)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Direccion)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Direccion)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Email)
        </div>
    </div>
}
@Html.ActionLink("Listar personas", "Listar", "Persona")
